{
  "name": "shill-or-no-shill-app",
  "version": "1.4.3",
  "description": "Shill Or No Shill packaged as a Windows desktop app",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "release": "electron-builder --win --publish always",
    "pretag": "npm run notes && node scripts/verify-version-docs.js",
    "tag": "node scripts/tag-version.js",
    "notes": "node scripts/generate-release-notes.js",
    "postinstall": "echo Postinstall completed",
    "icons": "node scripts/generate-icon.js",
    "brand-icon": "node scripts/build-branding-icon.js",
    "rebrand": "node scripts/build-branding-icon.js && node scripts/generate-icon.js"
  },
  "dependencies": {
    "electron-updater": "^6.3.11",
    "electron-log": "^5.1.4"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.9.5",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.shill.or.no.shill",
    "productName": "Shill Or No Shill",
    "icon": "build/icon.png",
    "files": [
      "**/*",
      "!backups/**",
      "!scripts/**",
      "!**/*.ps1",
      "!**/*.zip"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Snapwave333",
        "repo": "Shillornoshill"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/Gemini_Generated_Image_jk9vkjjk9vkjjk9v.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/Gemini_Generated_Image_jk9vkjjk9vkjjk9v.ico",
      "uninstallerIcon": "build/Gemini_Generated_Image_jk9vkjjk9vkjjk9v.ico",
      "shortcutName": "Shill Or No Shill"
    },
    "fileAssociations": [
      {
        "ext": "shill",
        "name": "Shill Or No Shill File",
        "description": "Open with Shill Or No Shill",
        "role": "Editor"
      }
    ]
  }
}